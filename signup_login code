<?php
	mysql_connect("localhost","root","gate");
	mysql_select_db("Fitnesspal") or die ("Could not connect");

	if(isset($_POST['submit']))	
	{
		$first_name = mysql_escape_string($_POST['firstname']);
		$last_name = mysql_escape_string($_POST['lastname']);
		$user_gender = mysql_escape_string($_POST['gender']);
		$user_dob = mysql_escape_string($_POST['dob']);
		$user_email = mysql_escape_string($_POST['email']);
		$username = mysql_escape_string($_POST['username']);
		$user_password = mysql_escape_string($_POST['password']);

		if(!$_POST['firstname']||!$_POST['lastname']||!$_POST['gender']
			||!$_POST['dob'] ||!$_POST['email']||!$_POST['username']||!$_POST['password'])
		{
			echo("<SCRIPT LANGUAGE='Javascript'>
			window.alert('you didnt fill all the fields')
			window.location.href='register.php'
			</SCRIPT>");
			exit();
		}
		$sql=mysql_query("SELECT* FROM customer WHERE `email`='$user_email'");
		if(mysql_num_rows($sql)>0)
		{
			echo("<SCRIPT LANGUAGE='JavaScript'> 
					window.alert('is already in database')
					</SCRIPT>");
			exit();
		}
		$query="INSERT INTO customer(fName,lName,dob,email)
				VALUES('$first_name','$last_name','$user_dob','$user_email')";
		$query1="INSERT INTO login(userName,password)
				VALUES('$username','$user_password')";		
		if(mysql_query($query)&&mysql_query($query1))
		{
				echo "<SCRIPT>alert(Registration is successful</SCRIPT>";
		}
	}
?>

